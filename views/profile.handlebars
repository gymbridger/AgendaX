<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>What Are You Planning?</h3>

    <form class="form new-event-form">
      <div class="form-group">
        <label for="event-name">Event name:</label>
        <input class="form-input" type="text" id="event-name" name="event-name" />
      </div>

      <div class="form-group">
        <label for="start-time">Start:</label>
        <input class="form-input" type="number" id="start-time" name="start-time" />
      </div>

      <div class="form-group">
        <label for="end-time">End:</label>
        <input class="form-input" type="number" id="end-time" name="end-time" />
      </div>

      <div class="form-group">
        <label for="event-desc">description:</label>
        <textarea class="form-input" id="event-desc" name="event-desc"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Event</button>
      </div>
    </form>
  </div>

  {{#if events.length}}
  <div class="col-md-6 event-list">
    <h3>Upcoming Events:</h3>

    {{#each events as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/profile/{{event.id}}">{{event.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">REMOVE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>