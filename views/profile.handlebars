<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>ADD EVENT BUTTON NEEDS POP-UP MODAL</h3>

    <button id="createEventButton" class="btn btn-primary">Add Event</button>
  </div>

  <div></div>

  <div>
    {{#if events.length}}
    <div class="col-md-6 event-list">
      <h3>Upcoming Events:</h3>

      {{#each events as |event|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/api/events/{{event.id}}">{{event.name}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger delete-button" data-id="{{event.id}}">REMOVE</button>
        </div>
      </div>
      <div class="popup">
        <div class="popup-content">
          <p>Are you sure you want to delete this event?</p>
          <button class="btn btn-danger confirm-button">DELETE</button>
          <button class="btn btn-secondary cancel-button">Cancel</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="./js/profile.js"></script>