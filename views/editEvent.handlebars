<h2>Edit Event</h2>

<form action="/api/events/{{id}}/edit" method="POST">
  <div class="form-group">
    <label for="event-name">Event name:</label>
    <input
      class="form-control"
      type="text"
      id="event-name"
      name="event-name"
      value="{{name}}"
    />
  </div>

  <div class="form-group">
    <label for="start-time">Start Date:</label>
    <input
      class="form-control"
      type="datetime-local"
      id="start-time"
      name="start-time"
      value="{{formatDate starting_date}}"
    />
  </div>

  <div class="form-group">
    <label for="end-time">End Date:</label>
    <input
      class="form-control"
      type="datetime-local"
      id="end-time"
      name="end-time"
      value="{{formatDate ending_date}}"
    />
  </div>

  <!-- Add more form fields as needed -->

  <button type="submit" class="btn btn-primary">Update Event</button>
</form>

<script src="./js/editEvent.js"></script>